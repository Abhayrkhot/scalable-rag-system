# API Configuration
API_KEY=your-secure-api-key-here
OPENAI_API_KEY=sk-your-openai-key-here

# Vector Database Configuration
VECTOR_DB_PROVIDER=chroma  # Options: chroma, pinecone
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=rag-documents

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-large  # Options: text-embedding-3-large, text-embedding-3-small, sentence-transformers
EMBEDDING_BATCH_SIZE=100
EMBEDDING_DIMENSION=3072  # For text-embedding-3-large

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rag_system
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Configuration
MAX_FILE_SIZE_MB=100
MAX_CONCURRENT_INGESTIONS=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_QUERY_RESULTS=20

# Monitoring
PROMETHEUS_PORT=8001
LOG_LEVEL=INFO
